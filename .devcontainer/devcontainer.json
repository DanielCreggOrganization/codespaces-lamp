// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"hostRequirements": {
		"cpus": 4
	  },
	  "waitFor": "onCreateCommand",
	  "updateContentCommand": "sudo apt-get update && sudo apt-get install -y apache2 mysql-server php-mysql",
	  "postCreateCommand": "sudo a2enmod rewrite && sudo service apache2 restart && sudo service mysql restart && echo 'Listen 8080' >> /etc/apache2/ports.conf && sudo sed -i 's/DocumentRoot \/var\/www\/html/DocumentRoot \/var\/www\/html\/public/g' /etc/apache2/sites-available/000-default.conf && sudo service apache2 restart && a2enmod rewrite",
	  "postAttachCommand": {
		"server": "ls -al"
	  },
	  "customizations": {
		"codespaces": {
		  "openFiles": [
			"index.html"
		  ]
		},
		"vscode": {
			"extensions": [
				"GitHub.copilot-nightly",
				"GitHub.copilot-labs"
			]
		}
	  },
	  "portsAttributes": {
		"80": {
		  "label": "Application",
		  "onAutoForward": "openPreview"
		}
	  },
	  "forwardPorts": [80],
	
	// Use 'postCreateCommand' to run commands after the container is created.
	//"postCreateCommand": "sudo apt-get update && sudo apt-get install -y apache2 mysql-server php-mysql && sudo a2enmod rewrite && sudo service apache2 restart && sudo service mysql restart && echo "Listen 8080" >> /etc/apache2/ports.conf && a2enmod rewrite",
	
	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
		
}
